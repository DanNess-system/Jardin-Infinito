---
// Layout específico para páginas de administración y autenticación
import '../styles/global.css';
import 'animate.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = "Panel de Administración - Jardín Infinito", description = "Sistema de gestión para Jardín Infinito" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		
		<!-- TailwindCSS -->
		<script src="https://cdn.tailwindcss.com"></script>
		
		<!-- Animate.css -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
		
		<!-- Chart.js (solo para admin) -->
		{title.includes('Panel de Administración') && (
			<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		)}
		
		<!-- Estilos globales para admin -->
		<style>
			.sidebar-transition {
				transition: transform 0.3s ease-in-out;
			}
			.content-transition {
				transition: margin-left 0.3s ease-in-out;
			}
			.tab-content {
				display: none;
			}
			.tab-content.active {
				display: block;
			}
			.gradient-bg {
				background: linear-gradient(135deg, #059669 0%, #065f46 100%);
			}
			.bg-custom {
				background: linear-gradient(135deg, #059669 0%, #065f46 100%);
			}
			.glass {
				background: rgba(255, 255, 255, 0.1);
				backdrop-filter: blur(10px);
				border: 1px solid rgba(255, 255, 255, 0.2);
			}
		</style>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
