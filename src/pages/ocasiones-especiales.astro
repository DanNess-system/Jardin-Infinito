---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/shared/Footer.astro";
import Whatsapp from "../components/shared/Whatsapp.astro";
---

<Layout title="Ocasiones Especiales - Jardín Infinito">
    <Whatsapp />

    <!-- Header con navegación -->
    <header class="bg-gradient-to-r from-[#447a36] to-[#93b889] py-6">
        <div class="container mx-auto px-6">
            <div class="flex items-center justify-between">
                <a
                    href="/"
                    class="flex items-center gap-3 text-white hover:scale-105 transition-transform duration-300"
                >
                    <svg
                        class="w-8 h-8"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    <span class="text-xl font-semibold">Volver al Inicio</span>
                </a>

                <div class="flex items-center gap-3">
                    <img src="/logo-white.png" alt="Logo" class="h-10" />
                    <h1 class="text-white text-2xl font-bold">
                        Ocasiones Especiales
                    </h1>
                </div>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section
        class="relative py-20 bg-[url('/ocasiones-especiales.png')] bg-cover bg-center overflow-hidden"
    >
        <div class="absolute inset-0">
            <div class="bg-pattern opacity-10"></div>
        </div>
        <div class="container mx-auto px-6 relative z-10">
            <div class="text-center max-w-4xl mx-auto">
                <div
                    class="backdrop-blur-sm bg-white/50 rounded-2xl p-8 shadow-2xl"
                >
                    <h2
                        class="text-6xl font-bold bg-gradient-to-r from-rose-500 to-orange-500 bg-clip-text text-transparent mb-6 animate__animated animate__fadeInDown"
                    >
                        ✨ Momentos Únicos e Inolvidables ✨
                    </h2>
                    <p
                        class="text-xl text-gray-700 leading-relaxed mb-8 animate__animated animate__fadeInUp animate__delay-1s"
                    >
                        Transformamos tus celebraciones más importantes con
                        arreglos florales únicos, diseñados especialmente para
                        hacer de cada momento una experiencia memorable.
                    </p>
                    <div
                        class="animate__animated animate__heartBeat animate__infinite"
                    >
                        <div
                            class="inline-block bg-white rounded-full p-4 shadow-lg"
                        >
                            <svg
                                class="w-12 h-12 text-rose-500"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                                ></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección: Ocasiones que celebramos -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-6">
            <h3 class="text-4xl font-bold text-center text-gray-800 mb-16">
                Ocasiones que Hacemos Especiales
            </h3>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Bodas -->
                <div
                    class="bg-gradient-to-br from-pink-50 to-rose-100 rounded-2xl p-8 text-center hover:shadow-lg transition-all duration-300 group"
                >
                    <div
                        class="w-16 h-16 bg-gradient-to-r from-pink-500 to-rose-500 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300"
                    >
                        <svg
                            class="w-8 h-8 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                            ></path>
                        </svg>
                    </div>
                    <h4 class="text-2xl font-bold text-gray-800 mb-4">Bodas</h4>
                    <p class="text-gray-600 mb-4">
                        Ramos de novia únicos, boutonnieres, centros de mesa y
                        decoración floral completa para tu día especial.
                    </p>
                    <ul class="text-sm text-gray-600 space-y-2">
                        <li>• Ramos de novia personalizados</li>
                        <li>• Decoración de ceremonia</li>
                        <li>• Centros de mesa elegantes</li>
                        <li>• Arcos florales</li>
                    </ul>
                </div>

                <!-- Quinceañeras -->
                <div
                    class="bg-gradient-to-br from-purple-50 to-pink-100 rounded-2xl p-8 text-center hover:shadow-lg transition-all duration-300 group"
                >
                    <div
                        class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300"
                    >
                        <svg
                            class="w-8 h-8 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
                            ></path>
                        </svg>
                    </div>
                    <h4 class="text-2xl font-bold text-gray-800 mb-4">
                        Quinceañeras
                    </h4>
                    <p class="text-gray-600 mb-4">
                        Celebra este momento único con arreglos florales que
                        reflejen la personalidad de la quinceañera.
                    </p>
                    <ul class="text-sm text-gray-600 space-y-2">
                        <li>• Ramos temáticos</li>
                        <li>• Decoración de salón</li>
                        <li>• Corsages elegantes</li>
                        <li>• Arreglos de mesa</li>
                    </ul>
                </div>

                <!-- Aniversarios -->
                <div
                    class="bg-gradient-to-br from-red-50 to-pink-100 rounded-2xl p-8 text-center hover:shadow-lg transition-all duration-300 group"
                >
                    <div
                        class="w-16 h-16 bg-gradient-to-r from-red-500 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300"
                    >
                        <svg
                            class="w-8 h-8 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                    </div>
                    <h4 class="text-2xl font-bold text-gray-800 mb-4">
                        Aniversarios
                    </h4>
                    <p class="text-gray-600 mb-4">
                        Renueva el amor con arreglos románticos que celebren los
                        años juntos.
                    </p>
                    <ul class="text-sm text-gray-600 space-y-2">
                        <li>• Rosas premium</li>
                        <li>• Arreglos románticos</li>
                        <li>• Decoración íntima</li>
                        <li>• Detalles personalizados</li>
                    </ul>
                </div>

                <!-- Graduaciones -->
                <div
                    class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-2xl p-8 text-center hover:shadow-lg transition-all duration-300 group"
                >
                    <div
                        class="w-16 h-16 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300"
                    >
                        <svg
                            class="w-8 h-8 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
                            ></path>
                        </svg>
                    </div>
                    <h4 class="text-2xl font-bold text-gray-800 mb-4">
                        Graduaciones
                    </h4>
                    <p class="text-gray-600 mb-4">
                        Celebra el logro académico con flores que simbolicen el
                        crecimiento y el éxito.
                    </p>
                    <ul class="text-sm text-gray-600 space-y-2">
                        <li>• Bouquets de graduación</li>
                        <li>• Corsages distintivos</li>
                        <li>• Arreglos temáticos</li>
                        <li>• Flores en colores de la institución</li>
                    </ul>
                </div>

                <!-- Baby Showers -->
                <div
                    class="bg-gradient-to-br from-yellow-50 to-orange-100 rounded-2xl p-8 text-center hover:shadow-lg transition-all duration-300 group"
                >
                    <div
                        class="w-16 h-16 bg-gradient-to-r from-yellow-500 to-orange-500 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300"
                    >
                        <svg
                            class="w-8 h-8 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                            ></path>
                        </svg>
                    </div>
                    <h4 class="text-2xl font-bold text-gray-800 mb-4">
                        Baby Showers
                    </h4>
                    <p class="text-gray-600 mb-4">
                        Bienvenida al nuevo miembro de la familia con
                        decoraciones florales tiernas y alegres.
                    </p>
                    <ul class="text-sm text-gray-600 space-y-2">
                        <li>• Arreglos en tonos pastel</li>
                        <li>• Centros de mesa temáticos</li>
                        <li>• Decoración delicada</li>
                        <li>• Flores suaves y aromáticas</li>
                    </ul>
                </div>

                <!-- Cumpleaños -->
                <div
                    class="bg-gradient-to-br from-green-50 to-teal-100 rounded-2xl p-8 text-center hover:shadow-lg transition-all duration-300 group"
                >
                    <div
                        class="w-16 h-16 bg-gradient-to-r from-green-500 to-teal-500 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300"
                    >
                        <svg
                            class="w-8 h-8 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0A1.5 1.5 0 013 15.546V12h18v3.546z M12 3l-3 6h6l-3-6z"
                            ></path>
                        </svg>
                    </div>
                    <h4 class="text-2xl font-bold text-gray-800 mb-4">
                        Cumpleaños
                    </h4>
                    <p class="text-gray-600 mb-4">
                        Haz que cada cumpleaños sea memorable con arreglos
                        florales vibrantes y alegres.
                    </p>
                    <ul class="text-sm text-gray-600 space-y-2">
                        <li>• Arreglos coloridos</li>
                        <li>• Flowers boxes temáticas</li>
                        <li>• Decoración festiva</li>
                        <li>• Flores de temporada</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección: Proceso personalizado -->
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-6">
            <h3 class="text-4xl font-bold text-center text-gray-800 mb-16">
                Nuestro Proceso Personalizado
            </h3>

            <div class="grid md:grid-cols-4 gap-8">
                <div class="text-center group">
                    <div
                        class="w-20 h-20 bg-gradient-to-r from-rose-500 to-orange-500 rounded-full flex items-center justify-center mx-auto mb-6 text-white font-bold text-xl group-hover:scale-110 transition-transform duration-300"
                    >
                        1
                    </div>
                    <h4 class="text-xl font-bold text-gray-800 mb-4">
                        Consulta Inicial
                    </h4>
                    <p class="text-gray-600">
                        Conversamos sobre tu evento, tus gustos, colores
                        preferidos y el presupuesto disponible.
                    </p>
                </div>

                <div class="text-center group">
                    <div
                        class="w-20 h-20 bg-gradient-to-r from-rose-500 to-orange-500 rounded-full flex items-center justify-center mx-auto mb-6 text-white font-bold text-xl group-hover:scale-110 transition-transform duration-300"
                    >
                        2
                    </div>
                    <h4 class="text-xl font-bold text-gray-800 mb-4">
                        Diseño Personalizado
                    </h4>
                    <p class="text-gray-600">
                        Creamos un diseño único basado en tus preferencias y el
                        estilo de tu celebración.
                    </p>
                </div>

                <div class="text-center group">
                    <div
                        class="w-20 h-20 bg-gradient-to-r from-rose-500 to-orange-500 rounded-full flex items-center justify-center mx-auto mb-6 text-white font-bold text-xl group-hover:scale-110 transition-transform duration-300"
                    >
                        3
                    </div>
                    <h4 class="text-xl font-bold text-gray-800 mb-4">
                        Elaboración Artesanal
                    </h4>
                    <p class="text-gray-600">
                        Nuestras expertas floristas crean cada arreglo con
                        dedicación y atención al detalle.
                    </p>
                </div>

                <div class="text-center group">
                    <div
                        class="w-20 h-20 bg-gradient-to-r from-rose-500 to-orange-500 rounded-full flex items-center justify-center mx-auto mb-6 text-white font-bold text-xl group-hover:scale-110 transition-transform duration-300"
                    >
                        4
                    </div>
                    <h4 class="text-xl font-bold text-gray-800 mb-4">
                        Entrega Puntual
                    </h4>
                    <p class="text-gray-600">
                        Entregamos tus arreglos en el momento perfecto para que
                        tu evento sea inolvidable.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Galería de trabajos anteriores -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-6">
            <h3 class="text-4xl font-bold text-center text-gray-800 mb-16">
                Algunos de Nuestros Trabajos
            </h3>

            <div class="grid md:grid-cols-3 gap-8">
                <div
                    class="relative group overflow-hidden rounded-2xl shadow-lg"
                >
                    <img
                        src="/assets/boda1.jpg"
                        alt="Boda elegante"
                        class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                    >
                        <div class="absolute bottom-4 left-4 text-white">
                            <h4 class="text-xl font-bold">Boda Elegante</h4>
                            <p class="text-sm">
                                Decoración completa en tonos pasteles
                            </p>
                        </div>
                    </div>
                </div>

                <div
                    class="relative group overflow-hidden rounded-2xl shadow-lg"
                >
                    <img
                        src="/assets/quinceañera1.jpg"
                        alt="Quinceañera"
                        class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                    >
                        <div class="absolute bottom-4 left-4 text-white">
                            <h4 class="text-xl font-bold">Quinceañera</h4>
                            <p class="text-sm">Centros de mesa temáticos</p>
                        </div>
                    </div>
                </div>

                <div
                    class="relative group overflow-hidden rounded-2xl shadow-lg"
                >
                    <img
                        src="/assets/aniversario1.jpg"
                        alt="Aniversario"
                        class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                    >
                        <div class="absolute bottom-4 left-4 text-white">
                            <h4 class="text-xl font-bold">Aniversario</h4>
                            <p class="text-sm">Decoración romántica íntima</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimoniales -->
    <section class="py-16 bg-gradient-to-br from-rose-50 to-pink-100">
        <div class="container mx-auto px-6">
            <h3 class="text-4xl font-bold text-center text-gray-800 mb-16">
                Lo que Dicen Nuestros Clientes
            </h3>

            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-white rounded-2xl p-8 shadow-lg">
                    <div class="flex items-center mb-4">
                        <div class="flex text-yellow-400">
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
