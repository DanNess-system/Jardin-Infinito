// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// Modelo de usuarios administradores
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sessions  Session[]

  @@map("users")
}

// Modelo de productos
model Product {
  id                String   @id @default(cuid())
  titulo            String
  descripcion       String
  imagen            String
  precioOriginal    Float
  precioDescuento   Float
  categoria         String
  stock             Int      @default(0)
  activo            Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("products")
}

// Modelo de servicios
model Service {
  id          String   @id @default(cuid())
  titulo      String
  descripcion String
  imagen      String?
  activo      Boolean  @default(true)
  orden       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

// Modelo de configuraci√≥n del sitio
model SiteConfig {
  id              String   @id @default("main")
  titulo          String
  descripcion     String
  logoUrl         String?
  backgroundUrl   String?
  videoUrl        String?
  telefono        String?
  email           String?
  facebook        String?
  instagram       String?
  whatsapp        String?
  updatedAt       DateTime @updatedAt

  @@map("site_config")
}

// Modelo de sesiones
model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}
